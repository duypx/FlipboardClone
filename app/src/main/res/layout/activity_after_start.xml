<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="clone.flipboard.flipboardclone.screen.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_general"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:background="@drawable/pink"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_youth"
                    android:layout_marginBottom="5dp"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/logo" />

                <ImageView
                    android:id="@+id/img_"
                    android:layout_marginTop="5dp"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_photo" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_conomy"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/ic_photo" />

            <ImageView
                android:id="@+id/img_politics"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="2"
                android:background="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_education"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="2"
                android:background="@drawable/logo" />

            <ImageView
                android:id="@+id/img_science"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/pink" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_health"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/pink" />

            <ImageView
                android:id="@+id/img_entertainment"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/logo" />

            <ImageView
                android:id="@+id/img_world"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/ic_photo" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>